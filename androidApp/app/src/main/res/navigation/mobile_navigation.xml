<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_settings"
        android:name="it.unibo.citizenDigitalTwin.ui.settings.SettingsFragment"
        android:label=""
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="it.unibo.citizenDigitalTwin.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/expand_group_category"
            app:destination="@id/groupCategoryInfoFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/navigation_home"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/navigation_devices"
        android:name="it.unibo.citizenDigitalTwin.ui.devices.DevicesFragment"
        android:label=""
        tools:layout="@layout/fragment_devices" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="it.unibo.citizenDigitalTwin.ui.notifications.NotificationsFragment"
        android:label=""
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/groupCategoryInfoFragment"
        android:name="it.unibo.citizenDigitalTwin.ui.group_category_info.GroupCategoryInfoFragment"
        android:label=""
        tools:layout="@layout/fragment_group_category_info" />

</navigation>
